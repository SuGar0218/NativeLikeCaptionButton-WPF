<Window
    x:Class="SuGarToolkit.WPF.Samples.CaptionButtons.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuGarToolkit.WPF.Samples.CaptionButtons"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="clr-namespace:SuGarToolkit.WPF.Controls.CaptionButtons;assembly=SuGarToolkit.WPF.Controls.CaptionButtons"
    xmlns:system="clr-namespace:System;assembly=netstandard"
    Title="SuGarToolkit.WPF.Controls.CaptionButtons"
    StateChanged="Window_StateChanged"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Window.DataContext>
        <local:TitleBarElementViewModel x:Name="ViewModel" x:FieldModifier="private" />
    </Window.DataContext>

    <WindowChrome.WindowChrome>
        <WindowChrome
            x:Name="WindowChrome"
            CaptionHeight="{Binding TitleBarHeight, Mode=OneWay}"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <my:NativeLikeTitleBar
            Grid.Row="0"
            Height="{Binding TitleBarHeight, Mode=OneWay}"
            BackButtonVisibility="{Binding IsBackButtonVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
            CloseButtonVisibility="{Binding IsCloseButtonVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
            HelpButtonVisibility="{Binding IsHelpButtonVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
            IsBackButtonEnabled="{Binding IsBackButtonEnabled, Mode=OneWay}"
            IsCloseButtonEnabled="{Binding IsCloseButtonEnabled, Mode=OneWay}"
            IsHelpButtonEnabled="{Binding IsHelpButtonEnabled, Mode=OneWay}"
            IsMaximizeButtonEnabled="{Binding IsMaximizeButtonEnabled, Mode=OneWay}"
            IsMinimizeButtonEnabled="{Binding IsMinimizeButtonEnabled, Mode=OneWay}"
            IsPaneToggleButtonEnabled="{Binding IsPaneToggleButtonEnabled, Mode=OneWay}"
            MaximizeButtonVisibility="{Binding IsMaximizeButtonVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
            MinimizeButtonVisibility="{Binding IsMinimizeButtonVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
            PaneToggleButtonVisibility="{Binding IsPaneToggleButtonVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">

            <my:NativeLikeTitleBar.CustomHeader>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Margin="8,0"
                        VerticalAlignment="Center"
                        Text="CaptionText"
                        Visibility="{Binding IsCaptionTextVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <Menu
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        IsEnabled="{Binding IsMenuBarEnabled, Mode=OneWay}"
                        Visibility="{Binding IsMenuBarVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                        <MenuItem Header="File">
                            <MenuItem Header="Open" />
                            <MenuItem Header="Save" />
                            <MenuItem Header="Save as ..." />
                        </MenuItem>
                        <MenuItem Header="Edit">
                            <MenuItem Header="Copy" />
                            <MenuItem Header="Paste" />
                            <MenuItem Header="Cut" />
                        </MenuItem>
                        <MenuItem Header="View">
                            <MenuItem Header="Lorem" />
                            <MenuItem Header="Ipsum" />
                        </MenuItem>
                    </Menu>
                </Grid>
            </my:NativeLikeTitleBar.CustomHeader>

            <my:NativeLikeTitleBar.CustomFooter>
                <StackPanel Orientation="Horizontal">
                    <my:TitleBarButton
                        IsEnabled="{Binding IsPersonPictureEnabled, Mode=OneWay}"
                        Visibility="{Binding IsPersonPictureVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                        <my:FontIcon FontSize="14" Glyph="&#xE77B;" />
                    </my:TitleBarButton>
                    <my:TitleBarButton
                        IsEnabled="{Binding IsThemeToggleButtonEnabled, Mode=OneWay}"
                        Visibility="{Binding IsThemeToggleButtonVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                        <my:FontIcon FontSize="14" Glyph="&#xE793;" />
                    </my:TitleBarButton>
                    <my:TitleBarButton
                        IsEnabled="{Binding IsSettingsButtonEnabled, Mode=OneWay}"
                        Visibility="{Binding IsSettingsButtonVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                        <my:FontIcon FontSize="14" Glyph="&#xE713;" />
                    </my:TitleBarButton>
                    <my:TitleBarButton
                        IsEnabled="{Binding IsFullScreenButtonEnabled, Mode=OneWay}"
                        Visibility="{Binding IsFullScreenButtonVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                        <my:FontIcon FontSize="12" Glyph="&#xE740;" />
                    </my:TitleBarButton>
                </StackPanel>
            </my:NativeLikeTitleBar.CustomFooter>

            <TextBox
                Width="300"
                MaxHeight="30"
                VerticalContentAlignment="Center"
                Text="Lorem ipsum set amet"
                WindowChrome.IsHitTestVisibleInChrome="True" />
        </my:NativeLikeTitleBar>

        <ScrollViewer
            Grid.Row="1"
            FontSize="16"
            VerticalScrollBarVisibility="Auto">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <ComboBox SelectedItem="{Binding TitleBarHeight, Mode=TwoWay}">
                            <system:Double>30</system:Double>
                            <system:Double>32</system:Double>
                            <system:Double>36</system:Double>
                            <system:Double>42</system:Double>
                            <system:Double>48</system:Double>
                            <system:Double>54</system:Double>
                            <system:Double>56</system:Double>
                        </ComboBox>
                        <Expander Header="BackButton">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsBackButtonVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsBackButtonEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                        <Expander Header="PaneToggleButton / MenuButton">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsPaneToggleButtonVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsPaneToggleButtonEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                        <Expander Header="MenuBar">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsMenuBarVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsMenuBarEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                        <Expander Header="TextBox">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsAutoSuggestBoxVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsAutoSuggestBoxEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <Expander Header="CloseButton">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsCloseButtonVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsCloseButtonEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                        <Expander Header="MaximizeButton">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsMaximizeButtonVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsMaximizeButtonEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                        <Expander Header="MinimizeButton">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsMinimizeButtonVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsMinimizeButtonEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                        <Expander Header="HelpButton">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsHelpButtonVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsHelpButtonEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                        <Expander Header="FullScreenButton">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsFullScreenButtonVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsFullScreenButtonEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                        <Expander Header="SettingsButton">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsSettingsButtonVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsSettingsButtonEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                        <Expander Header="ThemeToggleButton">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsThemeToggleButtonVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsHelpButtonEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                        <Expander Header="AccountButton">
                            <StackPanel>
                                <CheckBox Content="Visiblity" IsChecked="{Binding IsPersonPictureVisible, Mode=TwoWay}" />
                                <CheckBox Content="IsEnabled" IsChecked="{Binding IsPersonPictureEnabled, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>

</Window>
