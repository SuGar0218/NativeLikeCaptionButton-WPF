    <!--  Brush x:Key="CaptionCloseButtonPressedBackground"  -->

    <!--  Disabled  -->

    <!--  Brush x:Key="CaptionMinimizeButtonDisabledForeground"  -->
    <!--  Brush x:Key="CaptionMaximizeButtonDisabledForeground"  -->
