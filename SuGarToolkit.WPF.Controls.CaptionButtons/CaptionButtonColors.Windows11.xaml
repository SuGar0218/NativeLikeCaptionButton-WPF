<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="CaptionCloseButtonHoverBackgroundColor">#C42B1C</Color>
    <Color x:Key="CaptionCloseButtonPressedBackgroundColor">#C74031</Color>
    <Color x:Key="CaptionButtonHoverBackgroundColor">#10000000</Color>
    <Color x:Key="CaptionButtonPressedBackgroundColor">#08000000</Color>

    <SolidColorBrush x:Key="CaptionCloseButtonHoverBackground" Color="{StaticResource CaptionCloseButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionCloseButtonPressedBackground" Color="{StaticResource CaptionCloseButtonPressedBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionButtonHoverBackground" Color="{StaticResource CaptionButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionButtonPressedBackground" Color="{StaticResource CaptionButtonPressedBackgroundColor}" />

</ResourceDictionary>