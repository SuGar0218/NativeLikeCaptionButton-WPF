<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SuGarToolkit.WPF.Controls.CaptionButtons">

    <FontFamily x:Key="FontIconFontFamily">Segoe Fluent Icons, Segoe MDL2 Assets, Segoe UI Symbol</FontFamily>

    <Style TargetType="{x:Type local:FontIcon}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FontIcon}">
                    <TextBlock
                        FontFamily="{StaticResource FontIconFontFamily}"
                        FontSize="{TemplateBinding FontSize}"
                        Text="{TemplateBinding Glyph}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>