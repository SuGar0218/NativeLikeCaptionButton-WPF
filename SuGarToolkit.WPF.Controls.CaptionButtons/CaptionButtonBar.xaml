<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SuGarToolkit.WPF.Controls.CaptionButtons">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SuGarToolkit.WPF.Controls.CaptionButtons;component/CaptionButtonBar_themeresource.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type local:CaptionButtonBar}">
        <Setter Property="Height" Value="{StaticResource Windows11CaptionTallHeight}" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CaptionButtonBar}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel Orientation="Horizontal">
                            <local:CaptionMinimizeButton
                                x:Name="MinimizeButton"
                                IsEnabled="{TemplateBinding IsMinimizeButtonEnabled}"
                                Visibility="{TemplateBinding MinimizeButtonVisibility}"
                                WindowChrome.IsHitTestVisibleInChrome="True" />
                            <Grid
                                IsEnabled="{TemplateBinding IsMaximizeButtonEnabled}"
                                Visibility="{TemplateBinding MaximizeButtonVisibility}"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                                <local:CaptionRestoreButton x:Name="RestoreButton" Visibility="Collapsed" />
                                <local:CaptionMaximizeButton x:Name="MaximizeButton" Visibility="Visible" />
                            </Grid>
                            <local:CaptionCloseButton
                                x:Name="CloseButton"
                                IsEnabled="{TemplateBinding IsCloseButtonEnabled}"
                                Visibility="{TemplateBinding CloseButtonVisibility}"
                                WindowChrome.IsHitTestVisibleInChrome="True" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="OwnerWindowState" Value="Maximized">
                            <Setter TargetName="RestoreButton" Property="Visibility" Value="Visible" />
                            <Setter TargetName="MaximizeButton" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>