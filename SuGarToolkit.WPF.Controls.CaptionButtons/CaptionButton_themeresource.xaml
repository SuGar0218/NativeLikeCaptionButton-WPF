<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=netstandard">

    <system:String x:Key="CaptionMinimizeButtonGlyph">&#xE921;</system:String>
    <system:String x:Key="CaptionMaximizeButtonGlyph">&#xE922;</system:String>
    <system:String x:Key="CaptionRestoryButtonGlyph">&#xE923;</system:String>
    <system:String x:Key="CaptionCloseButtonGlyph">&#xE8BB;</system:String>
    <system:Double x:Key="CaptionButtonWidth">48</system:Double>

    <Color x:Key="Windows11CaptionCloseButtonHoverBackgroundColor">#C42B1C</Color>
    <Color x:Key="Windows11CaptionCloseButtonPressedBackgroundColor">#C74031</Color>
    <Color x:Key="Windows11CaptionButtonHoverBackgroundColor">#10000000</Color>
    <Color x:Key="Windows11CaptionButtonPressedBackgroundColor">#08000000</Color>

    <SolidColorBrush x:Key="Windows11CaptionCloseButtonHoverBackground" Color="{StaticResource Windows11CaptionCloseButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="Windows11CaptionCloseButtonPressedBackground" Color="{StaticResource Windows11CaptionCloseButtonPressedBackgroundColor}" />
    <SolidColorBrush x:Key="Windows11CaptionButtonHoverBackground" Color="{StaticResource Windows11CaptionButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="Windows11CaptionButtonPressedBackground" Color="{StaticResource Windows11CaptionButtonPressedBackgroundColor}" />

</ResourceDictionary>