    <Color x:Key="CaptionCloseButtonHoverBackgroundColor">#E81123</Color>
    <Color x:Key="CaptionCloseButtonPressedBackgroundColor">#9AE81123</Color>
    <Color x:Key="TitleBarButtonHoverBackgroundColor">#10000000</Color>
    <Color x:Key="TitleBarButtonPressedBackgroundColor">#08000000</Color>

    <!--  Normal  -->

    <SolidColorBrush x:Key="TitleBarButtonForeground" Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush x:Key="CaptionMinimizeButtonForeground" Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush x:Key="CaptionMaximizeButtonForeground" Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush x:Key="CaptionRestoreButtonForeground" Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush x:Key="CaptionCloseButtonForeground" Color="{x:Static SystemColors.ActiveCaptionTextColor}" />

    <SolidColorBrush x:Key="TitleBarButtonBackground" Color="Transparent" />
    <SolidColorBrush x:Key="CaptionMinimizeButtonBackground" Color="Transparent" />
    <SolidColorBrush x:Key="CaptionMaximizeButtonBackground" Color="Transparent" />
    <SolidColorBrush x:Key="CaptionRestoreButtonBackground" Color="Transparent" />
    <SolidColorBrush x:Key="CaptionCloseButtonBackground" Color="Transparent" />

    <!--  Hover  -->

    <SolidColorBrush x:Key="TitleBarButtonHoverForegroud" Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush x:Key="CaptionMinimizeButtonHoverForegroud" Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush x:Key="CaptionMaximizeButtonHoverForegroud" Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush x:Key="CaptionRestoreButtonHoverForegroud" Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush x:Key="CaptionCloseButtonHoverForegroud" Color="{x:Static SystemColors.HighlightTextColor}" />

    <SolidColorBrush x:Key="TitleBarButtonHoverBackground" Color="{StaticResource TitleBarButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionMinimizeButtonHoverBackground" Color="{StaticResource TitleBarButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionMaximizeButtonHoverBackground" Color="{StaticResource TitleBarButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionRestoreButtonHoverBackground" Color="{StaticResource TitleBarButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionCloseButtonHoverBackground" Color="{StaticResource CaptionCloseButtonHoverBackgroundColor}" />

    <!--  Pressed  -->

    <SolidColorBrush
        x:Key="TitleBarButtonPressedForeground"
        Opacity="{StaticResource TitleBarButtonPressedForegroundOpacity}"
        Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush
        x:Key="CaptionMinimizeButtonPressedForeground"
        Opacity="{StaticResource TitleBarButtonPressedForegroundOpacity}"
        Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush
        x:Key="CaptionMaximizeButtonPressedForeground"
        Opacity="{StaticResource TitleBarButtonPressedForegroundOpacity}"
        Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush
        x:Key="CaptionRestoreButtonPressedForeground"
        Opacity="{StaticResource TitleBarButtonPressedForegroundOpacity}"
        Color="{x:Static SystemColors.ActiveCaptionTextColor}" />
    <SolidColorBrush
        x:Key="CaptionCloseButtonPressedForeground"
        Opacity="{StaticResource TitleBarButtonPressedForegroundOpacity}"
        Color="{x:Static SystemColors.HighlightTextColor}" />

    <SolidColorBrush x:Key="TitleBarButtonPressedBackground" Color="{StaticResource TitleBarButtonPressedBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionMinimizeButtonPressedBackground" Color="{StaticResource TitleBarButtonPressedBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionMaximizeButtonPressedBackground" Color="{StaticResource TitleBarButtonPressedBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionRestoreButtonPressedBackground" Color="{StaticResource TitleBarButtonPressedBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionCloseButtonPressedBackground" Color="{StaticResource CaptionCloseButtonPressedBackgroundColor}" />

    <!--  Disabled  -->

